    {
     prints("^M^JSpeak script finished.");
    }
  }
}

reciever()
  {
  int c;
  str buffer[255], bc[2];
  c=cgetc();
  buffer="read ";
  if(c==30)
    {
    while(cgetc()<1)
       c=0;
    c=cgetc();
    while(c!=29)
      {
      if(c>0)
	strcat(buffer, c);
      c=cgetc();
      }
    strcat( buffer, " > null");
    dos( buffer, 0);
    c=0;
    }
  if(c>0)
    printsc_trm(c);
  }


sender()
{
 int c;

   c=inkey();

   if (c != 0)
    {
     if (c == 27)
      {
       exit_requested = 1;
       return 0;
      }

     if (c <= 255)
      {
       if (c != 8 && c != 127)
	cputc(c);
      }
   }
}

